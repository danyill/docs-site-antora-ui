{{#if navigation.length}}
<ol class="nav-list{{#if (eq level 1)}} parent js-nav-list{{/if}}">
  {{#each navigation}}
  <li class="nav-li{{#if (eq @root.page.url ./url)}} active{{/if}}" data-depth="{{../level}}">
    {{#if ./url}}
    <a class="flex shrink align-center link nav-link" href="
      {{~#if (eq ./urlType 'external')}}{{{./url}}}{{else}}{{{relativize @root.page.url ./url}}}{{~/if}}">
      {{{./content}}}
    </a>
    {{else}}
    <span class="flex grow align-center nav-heading">
      <span class="span">{{{./content}}}</span>
    </span>
    {{/if}}
    {{> nav-tree navigation=./items level=(increment ../level)}}
  </li>
  {{/each}}
</ol>
{{/if}}
